@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<MvcSample.Models.User>

<div class="page-header">
    <h2>Adminstracao de Usuarios</h2>
</div>

<article>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success" role="alert">@ViewBag.Success</div>

    }

    <table class="table 
        table-striped 
        table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Data de Criacao</th>
                <th>Acoes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @user.CreationDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = user.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div>
        <a href="#" 
            class="btn 
            btn-primary 
            btn-success 
            pull-right" 
            role="button">Criar Novo Usuario</a>
    </div>
</article>
